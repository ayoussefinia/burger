

<h2>Burgers To Devour</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Been There Done That</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="new-burger" name="burger">
  </div>

